
.user {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.userinfo {
  widows: 100%;
  height: 180px;
  background: #1296db;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.avatar {
  width: 75px;
  height: 75px;
  border-radius: 50%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  margin: 30px 0 0 30px;
}
.user-data {
  color: #fff;
  margin: 30px 0 0 20px;
}
.name {
  font-size: 18px;
  margin-bottom: 10px;
}
.edit {
  font-size: 14px;
  color: #eeebff;
}
.cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  padding: 0 10px;
  box-sizing: border-box;
  height: 45px;
  background: #fff;
  font-size: 18px;
}
.cell_left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
image {
